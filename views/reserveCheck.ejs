<!DOCTYPE html>
<html>

<head>
  <link rel="shortcut icon" href="/images/目的地アイコン1.ico">
  <title><%= title %></title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/reserveCheck.css' />
  <script type="text/javascript" src="/javascripts/commonCustom.js"></script>
  <script type="text/javascript" src="/javascripts/reserveCheckCustom.js"></script>
</head>

<body>

  <header>
    <div class="header-measure">
      <div class="header-logo">
        <a href="/"><img src="/images/title.jpg" alt=""></a>
      </div>
      <div class="header-nav">
        <nav class="nav">
          <ul>
            <li class="regUser"><a href="/">ホーム</a></li>
            <li class="regUser"><a href="/form">ホテル新規登録</a></li>
            <li class="regUser"><a href="/hotelList">ホテル一覧</a></li>
            <li class="regUser"><a href="/?page=logout">ログアウト</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main>

    <h1 class="fadeUp1"><%= title %></h1>

    <div id="resHotelDetail" class="">
      <form action="/" method="post">
        <table id="resHotelTable">
          <tbody id="resHotelbody">
            <tr class="fadeUp2">
              <th colspan="3" style="padding: 20px 0px 10px; text-align: left;"><div class="formTitleDiv resHotelArea"><span class="blueSquare">◇</span><span class="formTitle">ホテル名&nbsp;</span></div></th>
            </tr>
            <tr class="fadeUp2" style="text-align: left;">
              <td class="formYohaku"></td>
              <th colspan="7"><div id="hotelName"><%= hotelName %></div></th>
            </tr>
            <tr class="fadeUp3">
              <th colspan="3" style="padding: 20px 0px 10px; text-align: left;"><div class="formTitleDiv resHotelArea"><span class="blueSquare">◇</span><span class="formTitle">予約確認日&nbsp;</span></div></th>
            </tr>
            <tr class="fadeUp3" id="reserveDate">
              <td class="formYohaku"></td>
              <td colspan="2" style="padding-block: 5px;">
                <div id="resDateDiv"><select id="resDate"></select></div>
              </td>
            </tr>
            <tr hidden>
              <td><input type="text" id="resDetail" value="<%= JSON.stringify(values) %>"></td>
            </tr>
            <tr hidden>
              <td><input type="text" id="regHoliday" value="<%= regHoliday %>"></td>
            </tr>
            <tr class="fadeUp4">
              <th colspan="3" style="padding: 20px 0px 10px; text-align: left;"><div class="formTitleDiv resHotelArea"><span class="blueSquare">◇</span><span class="formTitle">予約情報&nbsp;</span></div></th>
            </tr>
            <tr class="fadeUp4" id="resHotelListTitle">
              <td class="formYohaku"></td>
              <th class="formSubTitle formNum">No.</th>
              <th class="formSubTitle">お客様名</th>
              <th class="formSubTitle formContact">連絡先</th>
              <th class="formSubTitle formResDate">予約日</th>
              <th class="formSubTitle formResTime">時間</th>
              <th class="formSubTitle formRoomVal">値段</th>
              <th class="formSubTitle formRegDate">登録日時</th>
            </tr>
            <!-- ホテルの予約詳細を表示 -->
          </tbody>
        </table>
      </form>
    </div>

  </main>

</body>

</html>
